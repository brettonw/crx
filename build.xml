<project name="GameOne" default="rel" basedir=".">
    <description> Build file for GameOne JavaScript project </description>
    <property name="build-tools-dir" value="tools"/>
    <import file="${build-tools-dir}/common-build.xml"/>

    <property name="source-dir" value="src"/>
    <property name="build-dir" value="build"/>
    <property name="site-dir" value="site"/>

    <property name="concat-target" value="GameOne-concat.js"/>
    <property name="preprocess-target" value="GameOne-preprocess.js"/>
    <property name="dev-target" value="GameOne-debug.js"/>
    <property name="rel-target" value="GameOne.js"/>

    <target name="js-concatenate" depends="init">
        <concat destfile="${build-dir}/${concat-target}">
            <!-- file order is important -->
            <fileset dir="${source-dir}" includes="macros.h" />
            <fileset dir="${source-dir}" includes="vector2d.js" />
            <fileset dir="${source-dir}" includes="particle.js" />
            <fileset dir="${source-dir}" includes="cluster.js" />
            <fileset dir="${source-dir}" includes="thing.js" />
            <fileset dir="${source-dir}" includes="ship.js" />
            <fileset dir="${source-dir}" includes="game.js" />
        </concat>
    </target>
</project>
